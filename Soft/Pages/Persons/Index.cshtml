@page
@model ABC.Pages.Party.PersonsPage;

@{
    Layout = "_Index";
}

<body>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Dob)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dob)
        </td>
        <td>
            <a asp-page="./Edit"
               asp-page-handler="Edit" 
               asp-route-id="@item.Id"
               asp-route-order="@Model.CurrentSort"
               asp-route-idx="@Model.PageIndex"
               asp-route-filter="@Model.CurrentFilter"
            >Edit</a>&nbsp 

            <a asp-page="./Details"
               asp-page-handler="Details"
               asp-route-id="@item.Id" 
               asp-route-order="@Model.CurrentSort"
               asp-route-idx="@Model.PageIndex"
               asp-route-filter="@Model.CurrentFilter"
            >Details</a>&nbsp 

            <a asp-page="./Delete" 
               asp-page-handler="Delete" 
               asp-route-id="@item.Id"
               asp-route-order="@Model.CurrentSort"
               asp-route-idx="@Model.PageIndex"
               asp-route-filter="@Model.CurrentFilter"
            >Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
</body>