@page
@using ABC.Pages.Extensions
@model ABC.Pages.Party.PersonsPage;

@{
    Layout = "_Index";
}

<body>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.MyTabHdr(nameof(Model.Item.FullName))
        </th>
        <th>
            @Html.MyTabHdr(nameof(Model.Item.FirstName))
        </th>
        <th>
            @Html.MyTabHdr(nameof(Model.Item.LastName))
        </th>
        <th>
            @Html.MyTabHdr(nameof(Model.Item.Gender))
        </th>
        <th>
            @Html.MyTabHdr(nameof(Model.Item.Dob))
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dob)
        </td>
        <td>
            <a asp-page="./Edit"
               asp-page-handler="Edit" 
               asp-route-id="@item.Id"
               asp-route-order="@Model.CurrentOrder"
               asp-route-idx="@Model.PageIndex"
               asp-route-filter="@Model.CurrentFilter"
            >Edit</a>&nbsp 

            <a asp-page="./Details"
               asp-page-handler="Details"
               asp-route-id="@item.Id" 
               asp-route-order="@Model.CurrentOrder"
               asp-route-idx="@Model.PageIndex"
               asp-route-filter="@Model.CurrentFilter"
            >Details</a>&nbsp 

            <a asp-page="./Delete" 
               asp-page-handler="Delete" 
               asp-route-id="@item.Id"
               asp-route-order="@Model.CurrentOrder"
               asp-route-idx="@Model.PageIndex"
               asp-route-filter="@Model.CurrentFilter"
            >Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
</body>