@page
@model ABC.Pages.Party.AddressesPage;

@{
    Layout = "_Index";
}
<table class="table">
    <thead>
    <tr>
        <th>
            <a asp-page="./Index"
               asp-page-handler="Index"
               asp-route-sortOrder="@Model.SortOrder(nameof(Model.Item.Street))"
               asp-route-pageIndex="@Model.PageIndex"
               asp-route-currentFilter="@Model.CurrentFilter"
            >@nameof(Model.Item.Street)</a>
            
        </th>
        <th>
            <a asp-page="./Index"
               asp-page-handler="Index"
               asp-route-sortOrder="@Model.SortOrder(nameof(Model.Item.City))"
               asp-route-pageIndex="@Model.PageIndex"
               asp-route-currentFilter="@Model.CurrentFilter"
            >@nameof(Model.Item.City)</a>
        </th>
        <th>
            <a asp-page="./Index"
               asp-page-handler="Index"
               asp-route-sortOrder="@Model.SortOrder(nameof(Model.Item.Region))"
               asp-route-pageIndex="@Model.PageIndex"
               asp-route-currentFilter="@Model.CurrentFilter"
            >@nameof(Model.Item.Region)</a>
        </th>
        <th>
            <a asp-page="./Index"
               asp-page-handler="Index"
               asp-route-sortOrder="@Model.SortOrder(nameof(Model.Item.ZipCode))"
               asp-route-pageIndex="@Model.PageIndex"
               asp-route-currentFilter="@Model.CurrentFilter"
            >@nameof(Model.Item.ZipCode)</a>
        </th>
        <th>
            <a asp-page="./Index"
               asp-page-handler="Index"
               asp-route-sortOrder="@Model.SortOrder(nameof(Model.Item.Country))"
               asp-route-pageIndex="@Model.PageIndex"
               asp-route-currentFilter="@Model.CurrentFilter"
            >@nameof(Model.Item.Country)</a>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Street)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Region)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZipCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            <a asp-page="./Edit"
               asp-page-handler="Edit" 
               asp-route-id="@item.Id"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@Model.PageIndex"
               asp-route-currentFilter="@Model.CurrentFilter"
            >Edit</a>&nbsp 

            <a asp-page="./Details"
               asp-page-handler="Details"
               asp-route-id="@item.Id" 
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@Model.PageIndex"
               asp-route-currentFilter="@Model.CurrentFilter"
            >Details</a>&nbsp 

            <a asp-page="./Delete" 
               asp-page-handler="Delete" 
               asp-route-id="@item.Id"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@Model.PageIndex"
               asp-route-currentFilter="@Model.CurrentFilter"
            >Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
